package Container;

public class InternMessage {
	public enum WhatMsg {
		DEBUGMSG, CONNECTIONMSG
	}

	public WhatMsg whatMsg;
	public String msg;
	public boolean firstMsg, from;
	public int id;

	public InternMessage( String _msg, boolean _firstMsg, boolean _from, int _id) {
		whatMsg = _whatMsg;
		msg = _msg;
		firstMsg = _firstMsg;
		from = _from;
		id = _id;
	}

	public InternMessage(String _msg, boolean _firstMsg, boolean _from) {
		whatMsg = _whatMsg;
		msg = _msg;
		firstMsg = _firstMsg;
		from = _from;
		id = -1;
	}
	public InternMessage(String _msg, boolean _from, int _id) {
		whatMsg = _whatMsg;
		msg = _msg;
		firstMsg = false;
		from = _from;
		id = _id;
	}
	
	
	/**
	 * Constructor for DebugMsgs
	 * @param _msg
	 */
	public InternMessage(String _msg) {
		whatMsg = WhatMsg.DEBUGMSG;
		msg = _msg;
		id = -1;
	}

}
