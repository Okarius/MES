package Model;

/**
 * The SecretaryPhoneNumberService Returns a byte Array
 * 
 * @author root
 *
 */
public class SecretaryPhoneNumberService extends Service {
	private String phoneNumber = "1234567890";

	public SecretaryPhoneNumberService(int _id, String _name) {
		super(_id, _name);
	}

	@Override
	public String getDebugMessage() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public byte[] getAnswer(String payload) {
		String[] payloadArray = this.getPayloadArray(payload);
		if (payloadArray.length == 0) {
			return phoneNumber.getBytes();
		} else {
			return "Wrong Arguments".getBytes();
		}
		return null;
	}

}
