package Model;

import java.util.ArrayList;

public class Device {
	private String name;
	private String mac;
	private ArrayList<String> msgs;

	public Device() {
		msgs = new ArrayList<>();
		msgs.add(name+" " +mac+ " is connected");
	}

	public void saveMSGToDevice(String msg) {
		msgs.add("To: "+ msg);
	}

	public void saveMSGFromDevice(String msg) {
		msgs.add("From: "+ msg);

	}
}
