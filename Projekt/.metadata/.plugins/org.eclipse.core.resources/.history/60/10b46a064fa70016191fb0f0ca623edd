import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;

import Model.Server;
/**
 * 
 * @author root
 *
 */
public class Controller implements ActionListener {
	Server server;
	View view;
	public Controller(Server _state, View _inquiry) {
		server = _state;
		view = _inquiry;
		view.addController(this);
		server.addObserver(view);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		String name = ((JButton) e.getSource()).getName();
		switch (name) {
		case "inquiryButton":
			server.inquire();
			break;
		case "clearButton":
			server.reset();
			break;
		case "waitButton":
			server.newConnection();
			break;	
		case "viewInquiryButton":
			view.setView("viewInquiryButton", server);
			break;	
		case "viewConnectionButton":
			view.setView("viewConnectionButton", server);
			break;	
		case "viewDebugButton":
			view.setView("viewDebugButton", server);
			break;	
		default:
			break;
		}
	}

}
